{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "types": ["node"],

    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@*": ["src/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
